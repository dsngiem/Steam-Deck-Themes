{
  "name": "Active Control Highlighter",
  "author": "finessesh0t",
  "version": "v1.2",
  "manifest_version": 5,
  "patches": {
    "Highlight Colors": {
      "type": "none",
      "values": {
        "_": {
          "shared.css": [
            "SP",
            "QuickAccess",
            "MainMenu"
          ]
        }
      },
      "components": [
        {
          "name": "Base Color",
          "type": "color-picker",
          "on": "_",
          "default": "#4cb4ff9A",
          "css_variable": "finessesh0t-base-highlight-color",
          "tabs": [
            "SP",
            "QuickAccess",
            "MainMenu"
          ]
        },
        {
          "name": "Pulse Highlight Color",
          "type": "color-picker",
          "on": "_",
          "default": "#4cb4ff44",
          "css_variable": "finessesh0t-blinked-highlight-color",
          "tabs": [
            "SP",
            "QuickAccess",
            "MainMenu"
          ]
        },
        {
          "name": "Initial Highlight Color",
          "type": "color-picker",
          "on": "_",
          "default": "#4cb4ff33",
          "css_variable": "finessesh0t-start-highlight-color",
          "tabs": [
            "SP",
            "QuickAccess",
            "MainMenu"
          ]
        }
      ]
    }
  }
}